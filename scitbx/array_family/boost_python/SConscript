Import("env_etc", "env_scitbx_boost_python_ext")

env_scitbx_boost_python_ext.SharedLibrary(target="regression_test_ext", source=[
  "regression_test_ext.cpp",
])

env_scitbx_boost_python_ext.Command(
  "#libtbx/scitbx_boost/array_family/__init__.py",
  "#libtbx/build/SConscript", env_etc.touch_init)

flex_scitbx_pyd = env_scitbx_boost_python_ext.SharedLibrary(
  target="flex_scitbx_ext",
  source=[
  "flex_scitbx_ext.cpp",
  "flex_grid.cpp",
  "flex_bool.cpp",
  "flex_size_t.cpp",
  "flex_int.cpp",
  "flex_long.cpp",
  "flex_float.cpp",
  "flex_double.cpp",
  "flex_complex_double.cpp",
  "flex_complex_double_2.cpp",
  "flex_std_string.cpp",
])
env_scitbx_boost_python_ext.Install(
  "#libtbx/scitbx_boost/array_family", flex_scitbx_pyd)
